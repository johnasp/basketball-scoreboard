{
  "name": "basketball-scoreboard",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build:sass": "sass src/style.scss public/style.css",
    "watch:sass": "sass --watch src/style.scss:public/style.css",
    "watch:html": "onchange 'public/index.html' -- npm run reload:html || true",
    "reload:html": "echo 'HTML changed.'",
    "serve": "live-server public",
    "dev": "concurrently \"npm run watch:sass\" \"npm run serve\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "live-server": "^1.2.2",
    "onchange": "^7.1.0",
    "sass": "^1.89.2"
  }
}
